header.header 
    nav.nav.nav--tours
        //a(href="/" class="nav__el") ALL Tours
        a(href=`/api/v1/tours?limit=${9}` class="nav__el") ALL Tours
    //.header__logo  
        img(src="/img/logo-white.png" alt="Natours_logo")
    //Search box
    .search-box
            input#search-input(type='text', placeholder='Search tours by name')
            button#search-btn(type='button') Search    
    nav.nav.nav--user
        if user
           a(href="/api/v1/booking/cart" class="nav__el") My bookings
           a(href="/me" class="nav__el") 
            img(src=`/img/users/${user.photo}` alt=`${user.name}` class="nav__user-img" )
            span= user.name.split("_")[0]
           //a.nav__el.nav__el--logout Log out
        else
           a.nav__el(href="/login") login 
           a.nav__el.nav__el--cta(href="/signup")  signup 
        



